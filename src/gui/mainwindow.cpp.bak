        m_waylandMenu = menuBar()->addMenu(tr("&Wayland"));
        if (m_waylandSecurityAction) {
            m_waylandMenu->addAction(m_waylandSecurityAction);
        }
        if (m_waylandOptimizationsAction) {
            m_waylandMenu->addAction(m_waylandOptimizationsAction);
        }
    }
} 